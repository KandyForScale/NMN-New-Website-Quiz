<script>
  
  function onetime() {
  $('.offer-delivery-container').hide();
  $('.autodeliver_options').hide();
  $('.onetime_options').show();
  $('#onetime_sel').css('background-color','white');
  $('#autodeliver_sel').css('background-color','#F2F2F2');    
  }
  
  
  function autodeliver() {
  $('.offer-delivery-container').show();
  $('.autodeliver_options').show();
  $('.onetime_options').hide();
  $('#deliver_frequency_6').show();
  $('#atc_6_bottles_90').show();
  $('#onetime_sel').css('background-color','#F2F2F2');
  $('#autodeliver_sel').css('background-color','white'); 
  
  }
  
  function change_frequency_6() {
  
    var x = document.getElementById("deliver_frequency_6").value;
    console.log(x);
    if (x == '180days') {
      
    $('.atc_6_bottles_180').css('display', 'flex');
    $('.atc_6_bottles_90').hide();
    }
    if (x == '90days') {
    $('.atc_6_bottles_90').css('display', 'flex');
    $('.atc_6_bottles_180').hide();
    }
  }
  
  
  function change_frequency_3() {
  
    var x = document.getElementById("deliver_frequency_3").value;
    if (x == '45days') {
    $('.atc_3_bottles_45').css('display', 'flex');
    $('.atc_3_bottles_90').hide();
    }
    if (x == '90days') {
    $('.atc_3_bottles_90').css('display', 'flex');
    $('.atc_3_bottles_45').hide();
    }
  }
  
  
